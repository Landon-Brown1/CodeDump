{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SFML app",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "-IC:/SFML/include",
                "-LC:/SFML/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-o",
                "TEST_SFML.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}