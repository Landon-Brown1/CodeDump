{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Pong",
      "type": "shell",
      "command": "g++",
      "args": [
        "Pong.cpp",
        "-IC:/SFML/include",
        "-LC:/SFML/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-lsfml-audio",
        "-o",
        "Pong.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Pong",
      "type": "shell",
      "command": "${workspaceFolder}/Pong.exe",
      "group": "none",
      "problemMatcher": []
    }
  ]
}